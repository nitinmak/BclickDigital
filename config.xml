<?xml version='1.0' encoding='utf-8'?>
<widget id="card.digitalcard.com" version="1.1.4" xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DigitalBCards</name>
    <description>
        DIGITALBCARDS
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Bitinfous Team
    </author>
    <content src="index.html" />
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    
    
        
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="16" /> 
        <preference name="android-targetSdkVersion" value="26" /> 
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

<feature name="Contacts">
    <param name="ios-package" value="CDVContacts" />
</feature>


<plugin name="cordova-plugin-battery-status@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-console@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-contacts@3.0.2" spec="1.0.0" />

  <plugin name="cordova-plugin-device-motion@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-device-orientation@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-device@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-dialogs@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-file-transfer@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-file@2.0.0" spec="2.0.0" />

  <plugin name="cordova-plugin-geolocation@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-globalization@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-inappbrowser@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-media-capture@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-media@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-network-information@1.0.0" spec="1.0.0" />

  <plugin name="cordova-plugin-splashscreen@2.0.0" spec="2.0.0" />

  <plugin name="cordova-plugin-vibration@1.0.0" spec="1.0.0" />

</widget>
